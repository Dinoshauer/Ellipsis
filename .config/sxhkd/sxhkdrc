#
# bspwm hotkeys
#

# Kill bspwm softly
super + alt + Escape
    for window_id in $(bspc query -W); do \
        bspc window $window_id -c; \
    done \
    && pkill panel \
    && bspc quit

super + w
    bspc window -c

super + t
    bspc desktop -l next

# Balance windows
super + b
    bspc desktop -B

# Unbalance windows
super + shift + b
    bspc desktop -E

super + {s,f}
    bspc window -t {floating,fullscreen}

super + {grave,Tab}
    bspc {window,desktop} -f last

super + apostrophe
    bspc window -s last

super + y
    bspc window -w last.manual

super + m
    bspc window -s biggest

super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
    bspc window -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# Focus a window by clicking it with the left mouse button, genius...
~button1
    bspc pointer -g focus

# Resize windows
ctrl + alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

ctrl + alt + !button{1-3}
    bspc pointer -t %i %i

ctrl + alt + @button{1-3}
    bspc pointer -u

#
# Desktoppy stuff
#

# Change desktop by #id

ctrl + alt + {1-9,0}
    bspc desktop -f ^{1-9,10}

# Change desktop

ctrl + alt + {Left,Right}
    bspc desktop -f {prev,next}

# Move window whith desktop
ctrl + shift + alt + Right
    bspc window -d next && bspc desktop -f next
ctrl + shift + alt + Left
    bspc window -d prev && bspc desktop -f prev

# Rotate windows across desktops

alt + ctrl + {shift + Tab,Tab}
    bspc control --record-history off; \
    bspc window {older,newer} -f; \
    bspc control --record-history on

# Rotate windows

alt + {shift + Tab,Tab}
    bspc window -f {prev,next}

#
# wm independent hotkeys
#

ctrl + alt + t
    konsole

ctrl + shift + space
    dmenu_recent

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
